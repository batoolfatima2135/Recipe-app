<div class="row justify-content-center m-5">
  <div class="col-8">
     <h2 class="text-center mb-5"><%= @recipe.name %></h2>
     <div class="d-flex justify-content-between">
       <div class="d-flex">
       <p><b>Prepration Time: </b></p>
           <p class="mx-2"><%= @recipe.preparation_time %> hours</p>
       </div>

     <div class="form-check form-switch">
      <label class="form-check-label" for="flexSwitch">Public</label>
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitch">
    </div>

     </div>
      <div class="d-flex">
       <p><b>Cooking Time: </b></p>
           <p class="mx-2"><%= @recipe.cooking_time %> hours</p>
       </div>
       <div class="d-flex">
       <p><b>Description: </b></p>
           <p class="mx-2"><%= @recipe.description %></p>
       </div>
       <div class="d-flex justify-content-between">
           <%= button_to "Generate shopping list", recipe_foods_path, class: 'btn btn-success my-2' %>
           <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe), class: 'btn btn-success my-2' %>
       </div>
 <table class="table table-success table-striped-columns my-4">
    <thead></thead>
     <% @recipe_foods.each do |food| %>
     <div class="row col-lg-8 col-12 border my-2 py-3">
       <%= render recipe %>
  </div>
   
   
  <% end %>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% if @recipe_foods.present? %>
 <% @recipe_foods.each do |recipe_food| %>
     <tr>
      <td><%= recipe_food.name %></td>
      <td><%= recipe_food.quantity %></td>
      <td><%= recipe_food.quantity * recipe_food.food.price %></td>
      <td>
          <%= link_to "Modify", recipe_food_path(recipe_food) %> 
          <%= link_to "Remove", recipe_food_path(recipe_food), method: :delete %>
      </td>
    </tr>
  <% end %>
   <% else %>
    <td colspan="4" class="text-center"> No ingredients yet</td>
   <% end %> 
   
  </tbody>
  </table>
  </div>
  
</div>


<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
  <%= link_to "Back to recipes", recipes_path %>
  
  <%= button_to "Destroy this recipe", @recipe, method: :delete %>
</div>
