<section class="container mt-5">
  <h2 class="d-flex justify-content-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field w-100" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-field w-100" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field w-100" %>
  </div>

  <div class="actions mt-3 d-flex justify-content-center">
    <%= f.submit "Sign up", class: "btn btn-danger w-50" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
