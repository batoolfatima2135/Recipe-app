<section class="container mt-5">
  <h2 class="d-flex justify-content-center">Log in</h2>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field w-100" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-field w-100" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "form-field checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions  d-flex justify-content-center mb-4">
      <%= f.submit "Log in", class: "btn btn-danger w-50" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
