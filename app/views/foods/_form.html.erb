<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control w-100", required: true %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :measurement_unit, style: "display: block" %>
    <%= form.text_field :measurement_unit, class: "form-control w-100", required: true %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :price, "Unit Price", style: "display: block" %>
    <%= form.number_field :price, class: "form-control w-100", required: true %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class: "form-control w-100", required: true %>
  </div>

  <div class="form-group d-flex justify-content-center mt-4">
    <%= form.submit class: "form-control w-50 btn btn-success" %>
  </div>
<% end %>
